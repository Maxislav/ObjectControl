<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:textColorPrimary">@color/whiteColor</item>-->
        <!--<item name="android:textColor">@color/whiteColor</item>-->
        <item name="android:titleTextStyle">@style/titleStyle</item>
        <item name="android:windowTitleStyle">@style/MyOwnDialogTitle</item>
        <!--<item name="android:windowBackground">@color/blackColor</item>-->
        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->
        <!--<item name="android:popupBackground">@drawable/gradient_dialog</item>-->
        <!--<item name="android:panelFullBackground">@drawable/gradient_dialog</item>-->
        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->

        <item name="android:popupBackground">@drawable/gradient_dialog</item>
        <item name="android:itemBackground">@drawable/list_style</item>
        <!--<item name="android:itemBackground">@style/PopupMenu</item>-->
        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->


    </style>



    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="activeTile">
        <item name="android:textColor">
            @color/blackColor
        </item>
        <item name="android:textStyle">
            bold
        </item>
    </style>
    <style name="unActiveTile">
        <item name="android:textColor">
            @color/grayText
        </item>
        <item name="android:textStyle">
            normal
        </item>
    </style>



    <style name="PopupMenu" >
        <item name="android:popupBackground">@drawable/gradient_dialog</item>
        <item name="android:itemBackground">@drawable/gradient_dialog</item>
        <item name="android:popupMenuStyle">@drawable/gradient_dialog</item>
        <item name="android:panelColorBackground">@drawable/gradient_dialog</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/MyOwnDialogTitle</item>
    </style>


    <style name="rowFields">
        <item name="android:padding">
            10dp
        </item>
        <item name="android:layout_marginBottom">
            10dp
        </item>
    </style>
    <style name="editTextStyle">
        <item name="android:padding">
            10dp
        </item>
        <item name="android:background">
            @drawable/text_field_background
        </item>
    </style>
    <style name="textStyleHistory">
        <item name="android:layout_marginLeft">
            10dp
        </item>
        <item name="android:textColor">
            @color/blackColor
        </item>
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:layout_weight">
            1
        </item>
        <item name="android:textSize">
          16dp
        </item>

    </style>



    <style name="MyOwnDialogTitle">
       <item name="android:background">
            @color/btnBorder
        </item>
        <item name="android:textColor">
            @color/whiteColor
        </item>

    </style>
    <style name="titleStyle">
        <item name="android:textColor">
            @color/borderColor
        </item>
    </style>
    <style name="titleBar">
        <item name="android:background">
            @drawable/title_bar
        </item>
        <item name="android:layout_margin">
            0dp
        </item>
        <item name="android:clickable">
        true
        </item>
    </style>

</resources>
